<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".newFace.FaceViewActivity">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mRecyclerViewGraph"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:scrollbars="vertical" />
    <SurfaceView
        android:id="@+id/mSurfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_alignLeft="@id/mSurfaceview">
    </ImageView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:scrollbars="vertical" />
    <Button
        android:id="@+id/btOpenGraph"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_alignLeft="@id/mSurfaceview"
        android:layout_alignBottom="@id/mSurfaceview"
        android:layout_marginLeft="@dimen/dp_100"
        android:text="拍照">
    </Button>
    <Button
        android:id="@+id/btContrast"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_alignRight="@id/mSurfaceview"
        android:layout_alignBottom="@id/mSurfaceview"
        android:layout_marginRight="@dimen/dp_100"
        android:text="对比">
    </Button>
</RelativeLayout>