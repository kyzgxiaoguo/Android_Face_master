<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="popupWindowButtonStyle">
        <item name="android:textColor">@color/color_BtText</item>
    </style>
    <!--弹窗动画-->
    <style name="popupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/window_in</item>
        <item name="android:windowExitAnimation">@anim/window_out</item>
    </style>

    <!--底部弹窗动画-->
    <style name="MyPopupWindow">
        <!--出：弹出-->
        <item name="android:windowEnterAnimation">@anim/set_popup_in</item>
        <!--入：退出-->
        <item name="android:windowExitAnimation">@anim/set_popup_out</item>
    </style>
</resources>
